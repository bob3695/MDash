@model MDash.Plex.Models.ClientInfo

<div style="position:relative;">
    <img id="nowPlayingImage" style="width: 30px;height:50px;" />
</div>

<div class="navbar navbar-inverse navbar-fixed-bottom">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul id="nowPlayingSection" class="nav navbar-nav">
                @foreach (var client in Model.Clients)
                {
                    <li><a href="#" data-thumb="@(client.NowPlaying != null ? client.NowPlaying.Thumb : string.Empty)">@client.Name</a></li>
                }
            </ul>
        </div>
    </div>
</div>